    <ImageButton
        android:id="@+id/ultra_image2"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginStart="50dp"
        android:background="@drawable/dog" />

</LinearLayout>
</LinearLayout>